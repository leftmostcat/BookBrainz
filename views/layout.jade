// vim: set ts=4 sw=4 :

doctype html
html
	head
		title= title
		link(href='/css/bootstrap-3.1.1.css', rel='stylesheet')
		block head
	body
		header.container
			nav.navbar.navbar-default(role='navigation')
				.container-fluid
					.navbar-header
						a.navbar-brand(href='/') BookBrainz

					ul.nav.navbar-nav
						li.dropdown
							a.dropdown-toggle(href='#', data-hover='dropdown') Edit
							ul.dropdown-menu
								li
									a(href='/creator/create') Add Creator
								li
									a(href='/book/create') Add Book

					#search
						form(action='/search', method='get').navbar-form.navbar-left
							input#search-query.form-control(name='query', placeholder='Searchâ€¦', type='text', value='')

							select#search-type.form-control(name='type')
								option(value='all') All
								option(value='creator') Creator
								option(value='book') Book
								option(value='edition') Edition
								option(value='work') Work
								option(value='publisher') Publisher

							button.btn.btn-default(type='submit')
								span.glyphicon.glyphicon-search
								.sr-only Search

					ul.nav.navbar-nav.navbar-right
						if user
							li.dropdown
									a.dropdown-toggle(href='/user/' + encodeURIComponent(user.name), data-hover='dropdown')= user.name
									ul.dropdown-menu
										li
											a(href='#') Edit Profile
						else
							li
								a(href='/login') Log In

		#page
			#content.container
				block content

		script(type='text/javascript', src='/js/jquery-1.11.1.js')
		script(type='text/javascript', src='/js/bootstrap-3.1.1.js')
		script(type='text/javascript', src='/js/bootstrap-hover-dropdown.js')

		block js
