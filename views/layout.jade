doctype html
html
	head
		title= title
		block head
	body
		#header
			#header-logo
				a.logo(href='/' title='BookBrainz')
					strong BookBrainz
				div
					form(action='/search', method='get')
						input#headerid-query(name='query', placeholder='Query', type='text', value='')

						select#headerid-type(name='type')
							option(value='all') All
							option(value='creator') Creator
							option(value='book') Book
							option(value='edition') Edition
							option(value='work') Work
							option(value='publisher') Publisher

						span.buttons.inline
							button(type='submit') Search

		#page
			#content
				block content

		block js
